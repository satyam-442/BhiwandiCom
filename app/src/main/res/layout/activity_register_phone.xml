<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPhoneActivity"
    android:background="@drawable/bhiwandi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/backgradient" />

    <ImageView
        android:id="@+id/welcomeLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/bhiwandicomlogo" />

    <TextView
        android:id="@+id/welcomeSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeLogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/croissant_one"
        android:text="-Discover and Explore"
        android:textColor="@color/whiteShade"
        android:textSize="21sp" />

    <LinearLayout
        android:id="@+id/registerLinear"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/registerNameSlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:text="Your Name:"
            android:textColor="@color/whiteShade"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/registerPhoneNameET"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Shivram Tripathi"
            android:paddingStart="15dp"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/croissant_one"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:textColor="@color/blueDark"
            android:background="@drawable/inputgradient"/>

        <TextView
            android:id="@+id/registerEmailSlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:text="Your Number"
            android:layout_marginTop="10dp"
            android:textColor="@color/whiteShade"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/registerPhoneET"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:hint="+91-9876543210"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:inputType="phone"
            android:fontFamily="@font/croissant_one"
            android:textStyle="bold"
            android:textColor="@color/blueDark"
            android:background="@drawable/inputgradient"/>

        <TextView
            android:id="@+id/registerPwdSlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:text="Your Password"
            android:layout_marginTop="10dp"
            android:textColor="@color/whiteShade"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginStart="25dp"/>

        <EditText
            android:id="@+id/registerPhonePwdET"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:hint="password"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:fontFamily="@font/croissant_one"
            android:textStyle="bold"
            android:textColor="@color/blueDark"
            android:background="@drawable/inputgradient"/>

        <Button
            android:id="@+id/registerPhoneButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Register!"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/croissant_one"
            android:textStyle="bold"
            android:textColor="@color/whiteShade"
            android:background="@drawable/buttongradient"/>

    </LinearLayout>

    <Button
        android:visibility="visible"
        android:id="@+id/registerNotAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttongradient"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="I'm not an Admin!"
        android:textAllCaps="false"
        android:textColor="@color/whiteShade"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerAdminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttongradient"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="I'm an Admin!"
        android:textAllCaps="false"
        android:textColor="@color/whiteShade"
        android:textStyle="bold" />

</RelativeLayout>