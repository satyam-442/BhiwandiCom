<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:background="@drawable/computer_lab"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgradient"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_above="@+id/user_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:src="@drawable/default_avatar"
        app:civ_border_color="@color/whiteShade"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/croissant_one"
        android:hint="UserName"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/whiteShade"
        android:textColorHint="@color/whiteShade"
        android:textSize="21sp" />


</RelativeLayout>
