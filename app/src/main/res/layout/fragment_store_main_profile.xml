<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.StoreMainProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/logoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/shopLogo"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:src="@drawable/img1" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Shop Name"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/shopTime"
                        android:layout_below="@id/shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/shopOwnerName"
                        android:layout_below="@id/shopTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Owner Name"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/shopOwnerPhone"
                        android:layout_below="@id/shopOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Shop Owner No."
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/shopAddress"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/shopOwnerPhone"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="Address"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blueDark"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="specials for"
            android:textSize="26sp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/blueDark"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/half"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half Sleeve Shirt"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <Button
                    android:id="@+id/halfBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/half_sleeve"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/full"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Sleeve Shirt"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:id="@+id/fullBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/full_sleeve"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jeans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="invisible"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeans"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <Button
                    android:id="@+id/jeansBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/jeansnew"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/trackpants"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Pants"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:id="@+id/trackpantsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/track_pants"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shoe"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoes"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <Button
                    android:id="@+id/shoeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/shoe_new"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="invisible"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallets"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:id="@+id/walletBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/wallet_new"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/belt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="invisible"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/backgroundWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belts"
                    android:textSize="23sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <Button
                    android:id="@+id/beltBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand All"
                    android:padding="20dp"
                    android:background="#00000000"
                    android:layout_alignParentBottom="true"
                    android:elevation="15dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/belt_new"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>