<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity"
    android:background="@drawable/bhiwandi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/backgradient" />

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/imageplaceholder" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_product_image"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:padding="9dp"
        android:hint="Product Name..."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputgradient"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/product_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:padding="9dp"
        android:hint="Product Description..."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputgradient"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/product_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_discription"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:padding="9dp"
        android:hint="Product Cost..."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputgradient"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/product_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_cost"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:padding="9dp"
        android:hint="Product Discount (if any)..."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputgradient"
        android:paddingStart="15dp"/>

    <Button
        android:id="@+id/addProductPhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_discount"
        android:layout_gravity="center"
        android:layout_marginTop="62dp"
        android:background="@drawable/buttongradient"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="Add Product!"
        android:textColor="@color/whiteShade"
        android:textStyle="bold" />

</RelativeLayout>